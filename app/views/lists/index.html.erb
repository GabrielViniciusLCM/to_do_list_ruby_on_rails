<h1>To Do Lists</h1>

<%= form_with model: @list, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.submit "Create List" %>
<% end %>

<div class="lists">
  <% @lists.each do |list| %>
    <div class="list">
      <h2><%= list.title %></h2>
      <%= form_with(model: [list, Item.new], local: true) do |form| %>
        <%= form.label :content, "New Item" %>
        <%= form.text_field :content %>
        <%= form.submit "Add Item" %>
      <% end %>

      <ul>
        <% list.items.each do |item| %>
          <li>
            <%= item.content %>
            <%= button_to "Delete", [list, item], method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
